<?xml version="1.0"?>
<project>
  <pomVersion>3</pomVersion>
  <name>TauP</name>
  <id>TauP</id>
  <groupId>TauP</groupId>
  <organization>
    <name>Seismology at the University of South Carolina</name>
    <url>http://www.seis.sc.edu</url>
    <logo>http://www.seis.sc.edu/images/seislogo.gif</logo>
  </organization>
  <currentVersion>1.2beta</currentVersion>
  <inceptionYear>1999</inceptionYear>
  <package>edu.sc.seis.TauP</package>
  <shortDescription>The TauP Toolkit.</shortDescription>
  <gumpRepositoryId>TauP</gumpRepositoryId>
  <description> 
The TauP Toolkit, flexible seismic traveltime utilities.
</description>
  <url>http://www.seis.sc.edu/software/${pom.artifactId}</url>
  <siteAddress>hopalong.seis.sc.edu</siteAddress>
  <siteDirectory>/var/www/html/software/${pom.artifactId}</siteDirectory>
  <distributionSite>hopalong.seis.sc.edu</distributionSite>
  <distributionDirectory>/var/www/html/software/mavenRepository</distributionDirectory>
  <repository>
        <url>http://roo.seis.sc.edu/fisheye/viewrep/seis/trunk/${pom.artifactId}</url>
    </repository>
  <developers>
    <developer>
      <name>Philip Crotwell</name>
      <id>crotwell</id>
      <organization>University of South Carolina</organization>
      <roles>
      <role>Module Maintainer</role>
      <role>Java Developer</role>
      </roles>
    </developer>
    </developers>
  <dependencies>
    <dependency>
      <artifactId>seisFile</artifactId>
      <groupId>seisFile</groupId>
      <version>1.0.5beta</version>
    </dependency>
  </dependencies>
  <build>
    <nagEmailAddress>jaster@seis.sc.edu</nagEmailAddress>
    <unitTestSourceDirectory>test/unit</unitTestSourceDirectory>
    <unitTest>
            <includes>
                <include>edu/**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>test/unit/edu/sc/seis/TauP</directory>
                    <targetPath>edu/sc/seis/TauP</targetPath>
                    <includes>
                        <include>*.txt</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
    </unitTest>
    <sourceDirectory>src</sourceDirectory>
    <resources>
       <resource>
          <directory>StdModels</directory>
          <targetPath>edu/sc/seis/TauP/StdModels</targetPath>
          <includes>
             <include>*</include>
          </includes>
       </resource>
    </resources>
  </build>
</project>
